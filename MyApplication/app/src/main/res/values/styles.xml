<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRedDark</item>
        <item name="colorPrimaryDark">@color/colorRed</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="buttonTheme" >
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextTheme" >
        <item name="android:background">@drawable/rounded_shape</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorRedDark</item>
        <item tools:targetApi="17" name="android:textAlignment">center</item>
    </style>


    <style name="textCreationViewTheme">
        <item name="android:textSize">17sp</item>
        <item name="android:background">@color/colorRed</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">5dp</item>
        <item tools:targetApi="17" name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>